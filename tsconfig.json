{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "files": true
  },
  "files": ["src/solc.d.ts"],
  "include": [
    "src/",
    "scripts/",
    "*.ts",
    "defender.config.ts",
    "solc.d.ts",
    "rollup.config.js",
    "templates",
    "src/types"
  ],
  "exclude": ["templates/functions/dist", "node_modules/", "compile/", "dist/"]
}
