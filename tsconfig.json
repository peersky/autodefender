{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "ts-node": {
    "files": true
  },
  "include": ["src"],
  "exclude": ["src/functions", "out"]
}
